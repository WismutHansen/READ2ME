{
  "manifest_version": 2,
  "name": "READ2ME API Caller",
  "version": "1.0",
  "description": "Call READ2ME API endpoints",
  "permissions": [
    "http://localhost:7777/",
    "https://<your-api-domain>/",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}