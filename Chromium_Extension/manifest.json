{
  "manifest_version": 3,
  "name": "READ2ME Browser Companion",
  "version": "1.0",
  "description": "Call READ2ME API endpoints. Please make sure to download and run the READ2ME server: https://github.com/WismutHansen/READ2ME",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "thumb.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "thumb_16.png",
    "32": "thumb_32.png",
    "48": "thumb_48.png",
    "128": "thumb_128.png"
  },
  "options_page": "settings.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
